<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md h-24 flex items-center">
        <div class="max-w-7xl mx-auto px-4 w-full flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-2">
                <img src="images/logo.png" alt="Logo" 
                     class="w-[120px] h-[75px] sm:w-[200px] sm:h-[90px] md:w-[150px] md:h-[90px] pt-2 lg:w-[160px] lg:h-[100px] object-contain mx-auto">
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex space-x-4">
                <a href="/" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-sm md:text-xs lg:text-base">Home</a>
                <a href="/about" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-sm md:text-xs lg:text-base">About</a>
                <a href="/services" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-sm md:text-xs lg:text-base">Services</a>
                <a href="/teacher" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-xs md:text-xs lg:text-base">Tutor Enrollment</a>
                <a href="/student" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-xs md:text-xs lg:text-base">Student Enrollment</a>
                <a href="/blog" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-sm md:text-xs lg:text-base">Blog</a>
                <a href="/contact" class="text-gray-700 hover:text-blue-600 transition whitespace-nowrap text-sm md:text-xs lg:text-base">Contact</a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="menu-toggle" class="md:hidden text-gray-700 focus:outline-none">
                <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                </svg>
            </button>
        </div>

        <!-- Mobile Menu (Hidden by Default) -->
       <!-- Mobile Menu -->
<div id="mobile-menu" class="hidden md:hidden absolute top-24 left-0 w-full bg-white shadow-lg flex flex-col space-y-2 py-4 px-6 transition-all duration-300 ease-in-out transform -translate-y-full">
    <a href="/" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">Home</a>
    <a href="/about" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">About</a>
    <a href="/services" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">Services</a>
    <a href="/teacher" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">Tutor Enrollment</a>
    <a href="/student" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">Student Enrollment</a>
    <a href="/blog" class="text-gray-700 hover:text-blue-600 transition font-medium py-2 border-b border-gray-200">Blog</a>
    <a href="/contact" class="text-gray-700 hover:text-blue-600 transition font-medium py-2">Contact</a>
</div>

    </nav>

    <script>
       document.addEventListener("DOMContentLoaded", function () {
        const menuToggle = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');

        if (menuToggle && mobileMenu) {
            menuToggle.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            mobileMenu.classList.toggle('translate-y-0');
        });
    }
});

    </script>
</body>
</html>
